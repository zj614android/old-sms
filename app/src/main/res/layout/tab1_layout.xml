<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_bg"
    android:orientation="vertical"
    android:paddingTop="8dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/bt_crete_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="创建信息"
            android:textColor="@drawable/selector_textcolor" />

        <Button
            android:id="@+id/bt_edit_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="编辑信息"
            android:textColor="@drawable/selector_textcolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/bt_select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="全选"
            android:textColor="@drawable/selector_textcolor"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_cancel_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="取消选择"
            android:textColor="@drawable/selector_textcolor"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_tab1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:cacheColorHint="@android:color/transparent"
        android:footerDividersEnabled="true"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <Button
        android:id="@+id/bt_delete_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/selector_btn"
        android:paddingBottom="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="8dp"
        android:text="删除信息"
        android:textColor="@drawable/selector_textcolor"
        android:visibility="gone" />

</LinearLayout>